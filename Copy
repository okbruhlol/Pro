local Folder = Instance.new("Folder", game:GetService("ReplicatedStorage"))
game:GetService("UserInputService").InputBegan:Connect(function(input)
    if game:GetService("UserInputService"):IsKeyDown(Enum.KeyCode.LeftShift) and input.KeyCode == Enum.KeyCode.C then
        local Target
        Target = game:GetService("Players").LocalPlayer:GetMouse().Target:FindFirstAncestorOfClass("Model")
        for i,v in pairs(Folder:GetChildren()) do
            v:Destroy()
        end
        local CTarget = Target:Clone()
        CTarget.Parent = Folder
    elseif game:GetService("UserInputService"):IsKeyDown(Enum.KeyCode.LeftShift) and input.KeyCode == Enum.KeyCode.V then
        local Target = Folder:FindFirstChildOfClass("Model"):Clone()
        Target.Parent = game.Workspace.CurrentRooms[game.Players.LocalPlayer:GetAttribute("CurrentRoom")]
        Target:PivotTo(game.Players.LocalPlayer.Character.Head.CFrame * CFrame.new(0, 0, -15))
        elseif game:GetService("UserInputService"):IsKeyDown(Enum.KeyCode.LeftShift) and input.KeyCode == Enum.KeyCode.X then
        local Target
        Target = game:GetService("Players").LocalPlayer:GetMouse().Target:FindFirstAncestorOfClass("Model")
        local time = 3
        for i, Part in pairs(Target:GetDescendants()) do 
            if Part:IsA("Part") then
        game:GetService("TweenService"):Create(Part, TweenInfo.new(time), {Transparency = 1}):Play()
            elseif Part:IsA("MeshPart") then
        game:GetService("TweenService"):Create(Part, TweenInfo.new(time), {Transparency = 1}):Play()
            end
        end
    wait(3)
    Target:Destroy()
        end
end)
